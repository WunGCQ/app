extends ../base.jade

block title
    title=LANG.record && LANG.record.categoryLabel


block append commonLinks
    link(rel="stylesheet", href="/statics/bootstrap/dist/css/bootstrap.min.css")
    link(rel="stylesheet", href="/statics/fontawesome/css/font-awesome.min.css")
    link(rel="stylesheet", href="//g.alicdn.com/kissy/k/5.0.1/overlay/assets/dpl.css")

block append headScripts
    script(src="//g.alicdn.com/kissy/k/5.0.1/seed.js" data-config="{combine:true}")

block content

    div.side-menu.side-menu--dark.rel
        nav.side-menu__nav--top
            - var activeClass = 'side-menu__item--active';
            // 首页
            a.link.side-menu__item.fa.fa-home(href="/admin/home", data-type="tooltip", data-content=LANG.sections.home, data-placement="right", class=Ecpkn.page==='home'&&activeClass)

            // 新闻
            a.link.side-menu__item.fa.fa-pencil(href="/admin/news" data-type="tooltip", data-content=LANG.sections.news, data-placement="right", class=Ecpkn.page==='news'&&activeClass)

            // 通告
            a.link.side-menu__item.fa.fa-bullhorn(href="/admin/announcements" data-type="tooltip", data-content=LANG.sections.announcement, data-placement="right", class=Ecpkn.page==='announcements'&&activeClass)

            // 师资力量
            a.link.side-menu__item.fa.fa-graduation-cap(href="/admin/faculty" data-type="tooltip", data-content=LANG.sections.faculty, data-placement="right", class=Ecpkn.page==='faculty'&&activeClass)
        nav.side-menu__nav--bottom
            a.link.side-menu__item.fa.fa-cogs(href="", data-type="tooltip", data-content=LANG.actions.setting, data-placement="right")
            a.link.side-menu__item.fa.fa-sign-out(href="", data-type="tooltip", data-content=LANG.actions.signout, data-placement="right")
block append scripts
    script(src="/statics/axios/dist/axios.min.js")
    script(src="/statics/scripts/components/axios-interceptors.min.js")
    
    block kissyScripts
        script(src="/statics/scripts/config.js")
        script(src="/statics/scripts/utils/utils.js")
        script(src="/statics/scripts/components/mask.js")
        script(src="/statics/scripts/components/toast.js")
        script(src="/statics/scripts/components/tooltip.js")
        script(src="/statics/scripts/components/modal.js")
