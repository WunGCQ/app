extends ./record.jade

block recordsListMetas
    // span=LANG.news.listTitle
    div.inline-block.column--full
        select#records-group-selector.select.select--flat
            each key in LANG.news.groupsKey
                option(value='#{key}')=LANG.news.groups[key]

block recordMetas
    div.w-4.mr--lg
        span=LANG.news.groupSelectorLabel 
        select#record-group-selector.select.select--flat
            each key in LANG.news.groupsKey
                option(value='#{key}')=LANG.news.groups[key]
    input#record-title-input.input--flat.float--right.form-control.w-4(type="text" required placeholder=LANG.record.title)


block append scripts
    script(src="/statics/scripts/admin-news.js")

